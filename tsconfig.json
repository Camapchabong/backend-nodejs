{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist", //build
    "rootDir": "src", //Decode ts to js in dist folder
    "baseUrl": ".",
    "paths": {
      "config/*": [
        "./src/config/*"
      ],
      "controllers/*": [
        "./src/controllers/*"
      ],
      "models/*": [
        "./src/models/*"
      ],
      "routes/*": [
        "./src/routes/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
    }
  }
}